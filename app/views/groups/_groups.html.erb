<div class="table-wrapper col-sm-4 shadow group m-3 p-4">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-8">
                <h2>Groups</h2>
            </div>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% @groups.each do |group| %>
            <tr>
                <td><%= link_to group.name, group %></td>
                <td>
                    <%= link_to group, method: :delete, data: { confirm: 'Are you sure you want to delete group?' }, remote: true,class:"delete" do %>
                        <i class="material-icons" style="color: #E34724">&#xE872;</i>
                    <% end %>
                    <%= link_to edit_group_path(group),class:"edit" do %>
                        <i class="material-icons"style="color: #FFC107">&#xE254;</i>
                    <% end %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
